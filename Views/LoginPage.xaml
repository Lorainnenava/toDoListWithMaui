<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoList.Views.LoginPage"
             Title="LoginPage">
    <Grid RowDefinitions=".3*, .7*">
        <Image Grid.Row="0" Aspect="AspectFill" Source="dotnet_bot.png"/>
        <Grid BackgroundColor="Green" Opacity=".3"/>
        <Grid Grid.Row="1">
            <RoundRectangle Margin="-5,-30,-5,-2" CornerRadius="30,30,0,0" Fill="White"/>
            <VerticalStackLayout Margin="30,0,30,0">
                <Label FontAttributes="Bold" FontSize="Medium" Text="Bienvenidos!" TextColor="#2D2D2D"/>
                <Label FontFamily="medium" Text="Iniciar sesión a continuación" TextColor="#A3A3A4"/>
            </VerticalStackLayout>

            <Grid Margin="0,30,0,0" ColumnDefinitions=".2*, .8*">
                <RoundRectangle Background="Gray" CornerRadius="10" HeightRequest="40" HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="40"/>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>